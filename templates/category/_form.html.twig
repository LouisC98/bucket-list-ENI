<div class="mx-auto p-3 rounded border border-gray-200 shadow w-full sm:w-100" data-turbo="false">
    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
        <div class="font-semibold text-red-500 text-sm mt-1">
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="flex justify-end gap-3">
        <button class="btn-primary">{{ button_label|default('Sauvegarder') }}</button>
    </div>

    {{ form_end(form) }}
</div>