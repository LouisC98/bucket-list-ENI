<form method="post"
      {% if is_granted('ROLE_ADMIN') %}
          action="{{ path('app_wish_admin_delete', {'id': wish.id}) }}"
      {% else %}
          action="{{ path('app_wish_delete', {'id': wish.id}) }}"
      {% endif %}
      onsubmit="return confirm('Vous êtes sûr de vouloir supprimer ce souhait ?');"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wish.id) }}">
    <button class="btn-danger">Supprimer</button>
</form>
