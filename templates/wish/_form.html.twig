<div class="mx-auto p-3 rounded border border-gray-200 shadow w-full sm:w-100">
    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
        <div class="font-semibold text-red-500 text-sm mt-1">
            {{ form_errors(form.title) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
        <div class="font-semibold text-red-500 text-sm mt-1">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="mb-3 flex items-center gap-3">
        {{ form_label(form.isPublished, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.isPublished, {'attr': {'class': 'transform scale-125'}}) }}
        <div class="font-semibold text-red-500 text-sm mt-1">
            {{ form_errors(form.isPublished) }}
        </div>
    </div>

    <div class="flex justify-end gap-3">
        <button class="btn-primary">{{ button_label|default('Sauvegarder') }}</button>
    </div>

    {{ form_end(form) }}
</div>